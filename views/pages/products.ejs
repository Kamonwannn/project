<% include ../partials/header %>


<H2> Search Product name </H2>
 <input class="form-control" id="myInput" type="text" placeholder="Search..">
 <br>
 <table class="table">
     <thead>
         <tr width="100%">
             <th width="15%">ID</th>
             <th width="40%">Title</th>
             <th width="15%">Price</th>
             <th><a name="" id=""  width="30%" class="btn btn-success" href="/insert_product" role="button">Add New</a></th>

         </tr>
     </thead>
     <tbody id="myTable">
     <% products.forEach(function(product){ %>
         <tr>
             <td scope="row"><%= product.id %></td>
             <td><%= product.title %></td>
             <td><%= product.price %></td> 
            
             <td><a name="" id="" class="btn btn-dark" href="/products/<%= product.id %>" role="button">Edit</a>
             <a name="" id="" class="btn btn-danger" href="/product_delete/<%= product.id %>" onclick="return confirm('Are you sure you want to delete?')" role="button">Delete</a></td>
         </tr>
         </tr>
         <% }); %>
     </tbody>
 </table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

