            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Edit</th>
                        <th><a  class="btn btn-success" href="products_insert.ejs "  tabindex="-1" role="button" aria-disabled="true" >Add Product</a></th>
                    </tr> 
                </thead>
                <tbody id="myTable">
                    <% products.forEach(function(product){ %>
                    <tr>
                        <td scope="row"><%= product.id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.price %></td>
                        <td><a class="btn btn-primary" href="/products/<%= product.id %>" role="button"> Edit </a></td>
                        <td><a class="btn btn-danger" href="/products/delete<%= product.id %>" role="button"> Delete </a></td>
                    </tr>
                   
                    <% }); %>
                </tbody>
            </table>


