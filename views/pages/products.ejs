<% include ../partials/header %>
  
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <% products.forEach(function(product) { %>
                        <th><a class="btn btn-primary btn-lg" href="/products/<%= product.id %>" role="button">Insert</a></th>
                    </tr> 
                </thead>
                <tbody>
               
                    <tr>
                        <td scope="row"><%= product.id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.price %></td>
                        <td><a class="btn btn-primary" href="/products/<%= product.id %>" role="button"> Edit </a></td>
                        <td><a class="btn btn-danger" href="/products/delete<%= product.id %>" role="button"> Delete </a></td>
                        
                    </tr>
                     <% }); %>
                </tbody>
            </table>


 <% include ../partials/footer %>